<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.KesfetActivity" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPlant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/plant"
        app:backgroundTint="@color/inverse" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/bird"
        app:backgroundTint="@color/inverse" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPlaceAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/add"
        app:backgroundTint="@color/info" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnPlaceSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/check_list"
        app:backgroundTint="@color/info"

        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>


