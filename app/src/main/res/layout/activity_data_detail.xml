<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#345D7E"
    tools:context=".dataDetail">

<RelativeLayout
    android:id="@+id/header"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/txtBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="2dp"
        android:text="&#8592;"
        android:textColor="#f27281"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtBaslik"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_toStartOf="@+id/delete"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toEndOf="@+id/txtBack"
        android:layout_toRightOf="@+id/txtBack"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="Hacılar Höyük Merkezi"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginRight="15dp"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_volume_off_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="31dp"
        android:layout_toStartOf="@+id/volume"
        android:layout_toLeftOf="@+id/volume"
        android:visibility="visible"
        app:srcCompat="@drawable/edit"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="18dp"
        android:layout_toStartOf="@+id/edit"
        android:layout_toLeftOf="@+id/edit"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_delete_forever_black_24dp"
        tools:ignore="VectorDrawableCompat" />


</RelativeLayout>


<RelativeLayout
    android:id="@+id/detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/header"
    android:layout_margin="5dp"
    android:background="@color/white">


    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:padding="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/bird"
        tools:ignore="VectorDrawableCompat">
    </ImageView>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"  >

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="start|center"
            android:paddingBottom="5dp"
            android:textColor="@color/primary"
