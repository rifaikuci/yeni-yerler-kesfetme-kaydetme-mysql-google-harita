<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#345D7E"
    tools:context=".dataDetail">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <TextView
            android:id="@+id/txtBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="Tür Ekleme Formu"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />



    </RelativeLayout>

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header"
    android:layout_above="@id/bbtnYoklamaKaydet"
    android:layout_marginBottom="5dp"

    >
    <RelativeLayout
        android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_margin="5dp"
        android:background="@color/white">


        <ImageView
            android:id="@+id/imageSelect"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/selection"
            tools:ignore="VectorDrawableCompat">
        </ImageView>
        <!-- Burası düzeltilecek     -->
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/imageSelect"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

        </TextView>






    </RelativeLayout>


</androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/bbtnYoklamaKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/danger"
        android:padding="5dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"

        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Kaydet"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bbtnYoklamDSaKaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/danger"
        android:padding="5dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"

        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Kaydet"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:ignore="DuplicateIds" />

</RelativeLayout>







