<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/customListe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#345d7e"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/resimler"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        android:src="@drawable/gecici"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/basliklar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"

        android:layout_marginEnd="5dp"

        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/checkler"

        android:layout_toLeftOf="@+id/checkler"
        android:layout_toEndOf="@+id/resimler"
        android:layout_toRightOf="@+id/resimler"
        android:gravity="center"
        android:padding="15dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        app:fontFamily="monospace" />

    <ImageView
        android:id="@+id/checkler"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/resimler"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        app:srcCompat="@drawable/check" />

</RelativeLayout>